{
  "name": "marketplace-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for multi-vendor marketplace",
  "scripts": {
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test && (cd services/api && go test ./...)",
    "build": "pnpm -r build && (cd services/api && go build ./...)",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "api:test": "cd services/api && go test ./...",
    "api:lint": "cd services/api && golangci-lint run ./...",
    "api:build": "cd services/api && go build ./..."
  },
  "devDependencies": {
    "prettier": "^3.5.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
